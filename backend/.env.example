# Server Configuration
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database Configuration (NEW dedicated HR database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/hr_enterprise?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters-long
JWT_REFRESH_EXPIRATION=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Application Settings
APP_NAME=HR Enterprise
APP_VERSION=1.0.0

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@hrenterprise.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=hr-enterprise-uploads

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173
