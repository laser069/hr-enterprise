generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & AUTHENTICATION MODELS
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  isActive      Boolean   @default(true) @map("is_active")
  emailVerified Boolean   @default(false) @map("email_verified")
  roleId        String?   @map("role_id")
  employeeId    String?   @unique @map("employee_id")
  lastLoginAt   DateTime? @map("last_login_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  role          Role?          @relation(fields: [roleId], references: [id])
  employee      Employee?      @relation(fields: [employeeId], references: [id])
  refreshTokens RefreshToken[]
  auditLogs     AuditLog[]
  approvedPayrolls PayrollRun[]  @relation("PayrollApprover")
  filedCompliances FilingRecord[]
  passwordResetTokens PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  notifications Notification[]
  uploadedDocuments Document[]

  @@map("users")
}

model RefreshToken {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ============================================
// RBAC MODELS
// ============================================

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  isSystem    Boolean          @default(false) @map("is_system")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  permissions RolePermission[]
  users       User[]

  @@map("roles")
}

model Permission {
  id        String           @id @default(uuid())
  name      String           @unique
  resource  String
  action    String
  createdAt DateTime         @default(now()) @map("created_at")

  roles     RolePermission[]

  @@unique([resource, action])
  @@map("permissions")
}

model RolePermission {
  roleId       String @map("role_id")
  permissionId String @map("permission_id")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

// ============================================
// CORE HR MODELS
// ============================================

model Department {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  headId      String?  @unique @map("head_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  head        Employee?  @relation("DepartmentHead", fields: [headId], references: [id])
  employees   Employee[]
  jobs        Job[]

  @@map("departments")
}

model Employee {
  id               String   @id @default(uuid())
  employeeCode     String   @unique @map("employee_code")
  firstName        String   @map("first_name")
  lastName         String   @map("last_name")
  email            String   @unique
  phone            String?
  departmentId     String?  @map("department_id")
  designation      String?
  managerId        String?  @map("manager_id")
  dateOfJoining    DateTime @map("date_of_joining")
  employmentStatus String   @default("active") @map("employment_status")
  salaryStructureId String? @map("salary_structure_id")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  department       Department?    @relation(fields: [departmentId], references: [id])
  manager          Employee?      @relation("ManagerHierarchy", fields: [managerId], references: [id])
  subordinates     Employee[]     @relation("ManagerHierarchy")
  departmentHeadOf Department?    @relation("DepartmentHead")
  salaryStructure  SalaryStructure? @relation(fields: [salaryStructureId], references: [id])
  user             User?
  attendances      Attendance[]
  leaveRequests    LeaveRequest[]
  leaveBalances    LeaveBalance[]
  approvedLeaves   LeaveRequest[] @relation("LeaveApprover")
  payrollEntries   PayrollEntry[]
  goals            Goal[]
  performanceReviews      PerformanceReview[]  @relation("ReviewEmployee")
  reviewsGiven            PerformanceReview[]  @relation("ReviewReviewer")
  policyAcknowledgements  PolicyAcknowledgement[]
  approvalRequests        Approval[]           @relation("ApprovalRequester")
  approvalDecisions       Approval[]           @relation("ApprovalApprover")
  approvalSteps           ApprovalStep[]
  documents               Document[]

  @@map("employees")
}

// ============================================
// ATTENDANCE MODELS
// ============================================

model Attendance {
  id              String    @id @default(uuid())
  employeeId      String    @map("employee_id")
  date            DateTime  @db.Date
  checkIn         DateTime? @map("check_in")
  checkOut        DateTime? @map("check_out")
  status          String    // present, absent, late, half-day, on-leave
  lateMinutes     Int       @default(0) @map("late_minutes")
  overtimeMinutes Int       @default(0) @map("overtime_minutes")
  workMinutes     Int?      @map("work_minutes")
  isManualEntry   Boolean   @default(false) @map("is_manual_entry")
  notes           String?
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@index([employeeId])
  @@index([date])
  @@index([status])
  @@map("attendance")
}

// ============================================
// LEAVE MODELS
// ============================================

model LeaveType {
  id                  String   @id @default(uuid())
  name                String   @unique
  description         String?
  annualLimit         Int      @map("annual_limit")
  carryForwardAllowed Boolean  @default(false) @map("carry_forward_allowed")
  maxCarryForward     Int?     @map("max_carry_forward")
  isActive            Boolean  @default(true) @map("is_active")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  balances  LeaveBalance[]
  requests  LeaveRequest[]

  @@map("leave_types")
}

model LeaveBalance {
  id            String   @id @default(uuid())
  employeeId    String   @map("employee_id")
  leaveTypeId   String   @map("leave_type_id")
  year          Int
  totalDays     Int      @map("total_days")
  usedDays      Int      @default(0) @map("used_days")
  pendingDays   Int      @default(0) @map("pending_days")
  remainingDays Int      @default(0) @map("remaining_days")
  carriedForward Int     @default(0) @map("carried_forward")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  employee    Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  leaveType   LeaveType  @relation(fields: [leaveTypeId], references: [id])

  @@unique([employeeId, leaveTypeId, year])
  @@index([employeeId])
  @@index([year])
  @@map("leave_balances")
}

model LeaveRequest {
  id               String    @id @default(uuid())
  employeeId       String    @map("employee_id")
  leaveTypeId      String    @map("leave_type_id")
  startDate        DateTime  @map("start_date") @db.Date
  endDate          DateTime  @map("end_date") @db.Date
  days             Int
  reason           String?
  status           String    @default("pending") // pending, approved, rejected, cancelled
  approvedBy       String?   @map("approved_by")
  approvedAt       DateTime? @map("approved_at")
  rejectedReason   String?   @map("rejected_reason")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  leaveType  LeaveType  @relation(fields: [leaveTypeId], references: [id])
  approver   Employee?  @relation("LeaveApprover", fields: [approvedBy], references: [id])

  @@index([employeeId])
  @@index([status])
  @@index([startDate, endDate])
  @@map("leave_requests")
}

// ============================================
// AUDIT LOG MODEL
// ============================================

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?  @map("user_id")
  action     String
  entity     String
  entityId   String?  @map("entity_id")
  oldValues  Json?    @map("old_values")
  newValues  Json?    @map("new_values")
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  createdAt  DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id])

  @@index([entity, entityId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================
// PAYROLL MODELS
// ============================================

model SalaryStructure {
  id              String   @id @default(uuid())
  name            String   @unique
  description     String?
  basic           Decimal  @db.Decimal(12, 2)
  hra             Decimal  @db.Decimal(12, 2)
  conveyance      Decimal  @default(0) @db.Decimal(12, 2)
  medicalAllowance Decimal @default(0) @map("medical_allowance") @db.Decimal(12, 2)
  specialAllowance Decimal @default(0) @map("special_allowance") @db.Decimal(12, 2)
  professionalTax Decimal  @default(0) @map("professional_tax") @db.Decimal(12, 2)
  pf              Decimal  @default(0) @db.Decimal(12, 2)
  esi             Decimal  @default(0) @db.Decimal(12, 2)
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  employees Employee[]

  @@map("salary_structures")
}

model PayrollRun {
  id           String   @id @default(uuid())
  month        Int
  year         Int
  status       String   @default("draft") // draft, approved, processed
  approvedBy   String?  @map("approved_by")
  approvedAt   DateTime? @map("approved_at")
  processedAt  DateTime? @map("processed_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  approver    User?          @relation("PayrollApprover", fields: [approvedBy], references: [id])
  entries     PayrollEntry[]

  @@unique([month, year])
  @@index([status])
  @@map("payroll_runs")
}

model PayrollEntry {
  id              String   @id @default(uuid())
  payrollRunId    String   @map("payroll_run_id")
  employeeId      String   @map("employee_id")
  grossSalary     Decimal  @map("gross_salary") @db.Decimal(12, 2)
  lopDays         Int      @default(0) @map("lop_days")
  lopDeduction    Decimal  @default(0) @map("lop_deduction") @db.Decimal(12, 2)
  totalDeductions Decimal  @map("total_deductions") @db.Decimal(12, 2)
  netSalary       Decimal  @map("net_salary") @db.Decimal(12, 2)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  payrollRun PayrollRun @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([payrollRunId, employeeId])
  @@index([employeeId])
  @@map("payroll_entries")
}

// ============================================
// PERFORMANCE MODELS
// ============================================

model Goal {
  id             String   @id @default(uuid())
  employeeId     String   @map("employee_id")
  title          String
  description    String?
  targetValue    Decimal  @map("target_value") @db.Decimal(10, 2)
  achievedValue  Decimal  @default(0) @map("achieved_value") @db.Decimal(10, 2)
  weightage      Int      @default(1) // percentage weight
  status         String   @default("pending") // pending, in-progress, completed, cancelled
  startDate      DateTime @map("start_date")
  endDate        DateTime @map("end_date")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([status])
  @@map("goals")
}

model PerformanceReview {
  id           String    @id @default(uuid())
  employeeId   String    @map("employee_id")
  reviewerId   String    @map("reviewer_id")
  reviewPeriod String    @map("review_period") // e.g., "Q1-2024", "2024-Annual"
  rating       Decimal   @db.Decimal(3, 2) // 1.00 to 5.00
  comments     String?
  strengths    String?
  improvements String?
  status       String    @default("draft") // draft, submitted, acknowledged
  reviewDate   DateTime? @map("review_date")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  employee Employee @relation("ReviewEmployee", fields: [employeeId], references: [id], onDelete: Cascade)
  reviewer Employee @relation("ReviewReviewer", fields: [reviewerId], references: [id])

  @@unique([employeeId, reviewPeriod])
  @@index([employeeId])
  @@index([reviewerId])
  @@map("performance_reviews")
}

// ============================================
// RECRUITMENT MODELS
// ============================================

model Job {
  id             String   @id @default(uuid())
  title          String
  description    String?
  departmentId   String?  @map("department_id")
  requirements   String?
  location       String?
  employmentType String?  @map("employment_type") // full-time, part-time, contract
  minSalary      Decimal? @map("min_salary") @db.Decimal(12, 2)
  maxSalary      Decimal? @map("max_salary") @db.Decimal(12, 2)
  status         String   @default("open") // draft, open, closed, archived
  openings       Int      @default(1)
  postedAt       DateTime? @map("posted_at")
  closedAt       DateTime? @map("closed_at")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  department Department? @relation(fields: [departmentId], references: [id])
  candidates Candidate[]

  @@index([status])
  @@index([departmentId])
  @@map("jobs")
}

model Candidate {
  id           String   @id @default(uuid())
  jobId        String   @map("job_id")
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  email        String
  phone        String?
  resumeUrl    String?  @map("resume_url")
  coverLetter  String?  @map("cover_letter")
  source       String?  // linkedin, indeed, referral, etc.
  stage        String   @default("applied") // applied, screening, interview, offer, hired, rejected
  appliedAt    DateTime @default(now()) @map("applied_at")
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([stage])
  @@map("candidates")
}

// ============================================
// COMPLIANCE MODELS
// ============================================

model FilingRecord {
  id          String   @id @default(uuid())
  type        String   // PF, ESI, TDS, GST, etc.
  period      String   // e.g., "2024-01", "Q1-2024"
  status      String   @default("pending") // pending, filed, acknowledged
  filedAt     DateTime? @map("filed_at")
  filedBy     String?  @map("filed_by")
  amount      Decimal? @db.Decimal(12, 2)
  receiptNo   String?  @map("receipt_no")
  notes       String?
  dueDate     DateTime? @map("due_date")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  filer User? @relation(fields: [filedBy], references: [id])

  @@unique([type, period])
  @@index([type])
  @@index([status])
  @@map("filing_records")
}

model PolicyAcknowledgement {
  id              String   @id @default(uuid())
  employeeId      String   @map("employee_id")
  policyName      String   @map("policy_name")
  policyVersion   String?  @map("policy_version")
  acknowledgedAt  DateTime @default(now()) @map("acknowledged_at")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at")

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, policyName])
  @@index([employeeId])
  @@map("policy_acknowledgements")
}

// ============================================
// WORKFLOW MODELS
// ============================================

model Approval {
  id           String    @id @default(uuid())
  entityType   String    @map("entity_type") // leave_request, payroll_run, etc.
  entityId     String    @map("entity_id")
  requesterId  String    @map("requester_id")
  approverId   String?   @map("approver_id")
  status       String    @default("pending") // pending, approved, rejected
  currentStep  Int       @default(1) @map("current_step")
  totalSteps   Int       @default(1) @map("total_steps")
  comments     String?
  approvedAt   DateTime? @map("approved_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  requester Employee @relation("ApprovalRequester", fields: [requesterId], references: [id])
  approver  Employee? @relation("ApprovalApprover", fields: [approverId], references: [id])
  steps     ApprovalStep[]

  @@unique([entityType, entityId])
  @@index([requesterId])
  @@index([approverId])
  @@index([status])
  @@map("approvals")
}

model ApprovalStep {
  id          String    @id @default(uuid())
  approvalId  String    @map("approval_id")
  stepNumber  Int       @map("step_number")
  approverId  String    @map("approver_id")
  status      String    @default("pending") // pending, approved, rejected
  comments    String?
  approvedAt  DateTime? @map("approved_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  approval Approval @relation(fields: [approvalId], references: [id], onDelete: Cascade)
  approver Employee @relation(fields: [approverId], references: [id])

  @@unique([approvalId, stepNumber])
  @@index([approverId])
  @@map("approval_steps")
}

// ============================================
// AUTHENTICATION & SECURITY MODELS
// ============================================

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("password_reset_tokens")
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("email_verification_tokens")
}

model FailedLoginAttempt {
  id          String   @id @default(uuid())
  email       String
  ipAddress   String?  @map("ip_address")
  userAgent   String?  @map("user_agent")
  attemptedAt DateTime @default(now()) @map("attempted_at")

  @@index([email])
  @@index([attemptedAt])
  @@map("failed_login_attempts")
}

// ============================================
// NOTIFICATION MODELS
// ============================================

model Notification {
  id          String           @id @default(uuid())
  userId      String           @map("user_id")
  type        NotificationType
  title       String
  message     String
  data        Json?
  read        Boolean          @default(false)
  readAt      DateTime?        @map("read_at")
  createdAt   DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

enum NotificationType {
  LEAVE_APPROVED
  LEAVE_REJECTED
  PAYROLL_PROCESSED
  PERFORMANCE_REVIEW
  DOCUMENT_UPLOADED
  SYSTEM
  ANNOUNCEMENT
}

// ============================================
// FILE & DOCUMENT MODELS
// ============================================

model Document {
  id           String         @id @default(uuid())
  employeeId   String?        @map("employee_id")
  uploadedBy   String         @map("uploaded_by")
  name         String
  originalName String         @map("original_name")
  mimeType     String         @map("mime_type")
  size         Int
  url          String
  key          String         // S3 key or file path
  category     DocumentCategory @default(OTHER)
  description  String?
  tags         String[]
  isPublic     Boolean        @default(false) @map("is_public")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: SetNull)
  uploader User      @relation(fields: [uploadedBy], references: [id])

  @@index([employeeId])
  @@index([category])
  @@index([uploadedBy])
  @@map("documents")
}

enum DocumentCategory {
  CONTRACT
  ID_PROOF
  RESUME
  PAYSLIP
  POLICY
  CERTIFICATE
  COMPLIANCE
  OTHER
}
